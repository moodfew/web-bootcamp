<%- include ("./partials/head.ejs") %>

<body style="background-color: #dee2e6;">


<%- include ("./partials/navbar.ejs") %>
<main>
  <div id="heading" class="box">
    <h1><%= day %>, <%= month %> <%= date %></h1>
  </div>
  <div class="box">
    <div class="lists">
      <div class="item">
        <input class="checkbox" type="checkbox" name="list" value="<%= day %>">
        <p class="text">asd</p>
      </div>
      <div class="item">
        <input class="checkbox" type="checkbox" name="list" value="<%= day %>">
        <p class="text">asd</p>
      </div>
      <div class="item">
          <input class="checkbox" type="checkbox" name="list" value="<%= day %>">
          <p class="text">asd</p>
        </div>
        <% if (locals.list) { %>
          <% for (var i = 0; i < list; i++) { %>
            <%- include ("./partials/item.ejs") %>
          <% } %>
        <% } %>

 
      
    </div>
    <script>
      $(".checkbox").on("click", function() {
    if ($(this).is(':checked')) {
      $(".text").addClass("ticked");
    }
    else {
      $(".text").removeClass("ticked");

    }
    })
    </script>

    <form action="/" method="post">

      <input type="text" name="newItem" placeholder="New Item" autocomplete="off" />
      <button type="submit" name="list">+</button>
    </form>
   
  </div>
</main>    
    




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>animehaven</title>
    <link rel="stylesheet" href="styles/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles/styles.css">

</head>
<body>
    <div class="container1 intro">
        <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-film" viewBox="0 0 16 16">
            <path d="M0 1a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v14a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V1zm4 0v6h8V1H4zm8 8H4v6h8V9zM1 1v2h2V1H1zm2 3H1v2h2V4zM1 7v2h2V7H1zm2 3H1v2h2v-2zm-2 3v2h2v-2H1zM15 1h-2v2h2V1zm-2 3v2h2V4h-2zm2 3h-2v2h2V7zm-2 3v2h2v-2h-2zm2 3h-2v2h2v-2z"/>
        </svg>
        <div class="navbar">
            <ul class="custom_list">
                <a href="/"><li>Home</li></a>
                <a href="/top"><li>Top</li></a>
                <a href="/random"><li>Random</li></a>
            </ul>
        </div>
        <div class="container2">
            <div class="search-bar">
                <input type="text" placeholder="Search Anime...">
                <button type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                </button>
            </div>
        </div>

        <% if (locals.content) { %>
            <div id="anime" class="album py-5">
                <div class="container">
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                
            <% for (let i = 0; i < content.data.length - 10; i++) { %>
                <% console.log(content.data[i]) %>
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="<%= content.data[i].images.jpg.image_url %>" width="300" height="320" alt="personalsite">
                        <div class="card-body bg-grey">
                        <h4><%= content.data[i].title_english %></h4>
                    <p class="card-text overflow-hidden">
                        <%= content.data[i].synopsis %>.
                    </p>
                    <p class="card-text">
                        Epsiodes: <%= content.data[i].episodes %>,
                        Type: <%= content.data[i].type %>,
                        Score: <%= content.data[i].score %> <br>
                        Status: <%= content.data[i].status %>
                        
                    </p>      
                  </div>
                </div>
              </div>
                
    
            
                           
    
                
            <% } %>
                    </div>
                </div>
            </div>
        <% } %>

    </div>
    
   